{#
/**
 * @file
 * Cats theme implementation for an 'input' element.
 *
 * Available variables:
 * - attributes: HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set classes = [
  'form-input',
  'w-full',
  'px-4',
  'py-2',
  'border',
  'border-gray-300',
  'rounded-lg',
  'focus:ring-2',
  'focus:ring-[var(--cats-primary)]',
  'focus:border-[var(--cats-primary)]',
  'transition-colors',
] %}
<input{{ attributes.addClass(classes) }} />{{ children }}

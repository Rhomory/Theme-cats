{#
/**
 * @file
 * Cats theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: A list of breadcrumb links.
 *   - text: Breadcrumb link text.
 *   - url: Breadcrumb link URL.
 *
 * @see template_preprocess_breadcrumb()
 */
#}
{% if breadcrumb %}
  <nav class="breadcrumb" role="navigation" aria-labelledby="system-breadcrumb">
    <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
    <ol class="breadcrumb__list flex items-center gap-2 text-sm text-gray-600">
      {% for item in breadcrumb %}
        <li class="breadcrumb__item inline-flex items-center">
          {% if item.url %}
            <a href="{{ item.url }}" class="breadcrumb__link hover:text-[var(--cats-primary)] transition-colors">
              {{ item.text }}
            </a>
          {% else %}
            <span class="breadcrumb__text text-gray-900 font-medium">{{ item.text }}</span>
          {% endif %}
          {% if not loop.last %}
            <span class="breadcrumb__separator mx-2 text-gray-400" aria-hidden="true">/</span>
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}

{#
/**
 * @file
 * Container component - Contenedor flexible
 */
#}


{% set custom_class = css_class|default('') %}
{% set custom_id = html_id|default('') %}
{% set container_width = width|default('boxed') %}
{% set container_bg = background_color|default('transparent') %}
{% set container_padding = padding|default('md') %}
{% set container_radius = border_radius|default('none') %}
{% set container_shadow = shadow|default('none') %}

{% set container_cva =
  html_cva(
    base: ['relative w-full'],
    variants: {
      width: {
        full: 'w-full',
        boxed: 'max-w-7xl mx-auto',
        narrow: 'max-w-3xl mx-auto',
        wide: 'max-w-[1400px] mx-auto'
      },
      backgroundColor: {
        transparent: 'bg-transparent',
        primary: 'cats-bg-primary text-white',
        secondary: 'cats-bg-secondary text-white',
        accent: 'cats-bg-accent text-white',
        muted: 'cats-bg-muted',
        white: 'bg-white',
        dark: 'bg-slate-900 text-white'
      },
      padding: {
        none: 'p-0',
        sm: 'p-4',
        md: 'p-6 md:p-8',
        lg: 'p-8 md:p-12',
        xl: 'p-12 md:p-16'
      },
      borderRadius: {
        none: 'rounded-none',
        sm: 'rounded',
        md: 'rounded-lg',
        lg: 'rounded-2xl',
        full: 'rounded-3xl'
      },
      shadow: {
        none: 'shadow-none',
        sm: 'shadow-sm',
        md: 'shadow-md',
        lg: 'shadow-lg'
      }
    }
  )
%}

{% set container_classes =
  container_cva.apply({
    width: container_width,
    backgroundColor: container_bg,
    padding: container_padding,
    borderRadius: container_radius,
    shadow: container_shadow
  })
%}

<div class="{{ container_classes }} {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %}>
  {% block content %}
  {% endblock %}
</div>

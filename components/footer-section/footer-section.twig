{% set custom_class = css_class|default('') %}
{% set custom_id = html_id|default('') %}
{% set footer_style = style|default('dark') %}
{% set footer_columns = columns|default('4') %}
{% set footer_padding = padding|default('lg') %}
{% set has_copyright = show_copyright|default(true) %}
{% set copyright = copyright_text|default('') %}

{% set footer_cva =
  html_cva(
    base: ['cats-footer-section w-full'],
    variants: {
      style: {
        default: 'bg-gray-100 text-slate-900',
        dark: 'bg-slate-900 text-white',
        primary: 'cats-bg-primary text-white',
        gradient: 'bg-gradient-to-br from-slate-900 to-slate-800 text-white'
      },
      padding: {
        sm: 'py-8',
        md: 'py-12',
        lg: 'py-16 md:py-20'
      }
    }
  )
%}

{% set footer_classes =
  footer_cva.apply({
    style: footer_style,
    padding: footer_padding
  })
%}

{% set grid_cva =
  html_cva(
    base: ['grid gap-8 md:gap-12'],
    variants: {
      columns: {
        '1': 'grid-cols-1',
        '2': 'grid-cols-1 md:grid-cols-2',
        '3': 'grid-cols-1 md:grid-cols-3',
        '4': 'grid-cols-2 md:grid-cols-4'
      }
    }
  )
%}

{% set grid_classes =
  grid_cva.apply({
    columns: footer_columns
  })
%}

<footer class="{{ footer_classes }} {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %}>
  <div class="container mx-auto px-4">
    {# Footer Columns #}
    <div class="{{ grid_classes }}">
      {% block footer_columns %}
      {% endblock %}
    </div>

    {# Bottom Section #}
    {% if has_copyright or copyright %}
      <div class="mt-12 pt-8 border-t {{ footer_style == 'default' ? 'border-gray-300' : 'border-white/20' }}">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          {% if copyright %}
            <p class="text-sm {{ footer_style == 'default' ? 'text-gray-600' : 'text-white/70' }}">
              {{ copyright }}
            </p>
          {% endif %}

          {# Additional footer bottom content #}
          {% block footer_bottom %}
          {% endblock %}
        </div>
      </div>
    {% endif %}
  </div>
</footer>

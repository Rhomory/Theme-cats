{#
/**
 * @file
 * Carousel component - Carrusel de contenido
 */
#}


{% set custom_class = css_class|default('') %}
{% set custom_id = html_id|default('') %}
{% set carousel_autoplay = autoplay|default(true) %}
{% set carousel_speed = autoplay_speed|default(5000) %}
{% set carousel_nav = show_navigation|default(true) %}
{% set carousel_dots = show_dots|default(true) %}
{% set carousel_effect = effect|default('slide') %}

<div
  class="cats-carousel relative w-full overflow-hidden {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %}
  data-cats-carousel
  data-autoplay="{{ carousel_autoplay ? 'true' : 'false' }}"
  data-speed="{{ carousel_speed }}"
  data-effect="{{ carousel_effect }}"
>
  <div class="cats-carousel-track flex transition-transform duration-500 ease-out">
    {% block slides %}
    {% endblock %}
  </div>

  {% if carousel_nav %}
    <button type="button" class="cats-carousel-prev absolute left-4 top-1/2 -translate-y-1/2 z-10 p-2 rounded-full bg-white/80 hover:bg-white shadow-md" aria-label="Anterior" data-carousel-prev>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    <button type="button" class="cats-carousel-next absolute right-4 top-1/2 -translate-y-1/2 z-10 p-2 rounded-full bg-white/80 hover:bg-white shadow-md" aria-label="Siguiente" data-carousel-next>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  {% endif %}

  {% if carousel_dots %}
    <div class="cats-carousel-dots absolute bottom-4 left-1/2 -translate-x-1/2 z-10 flex gap-2" data-carousel-dots>
    </div>
  {% endif %}
</div>

{#
/**
 * @file
 * Hero component - Banner con imagen de fondo
 */
#}


{% set custom_class = css_class|default('') %}
{% set custom_id = html_id|default('') %}
{% set hero_height = height|default('large') %}
{% set hero_position = content_position|default('center-left') %}
{% set hero_overlay = overlay_opacity|default('40') %}
{% set hero_bg_color = background_color|default('dark') %}
{% set hero_text_color = text_color|default('light') %}

{% set hero_cva =
  html_cva(
    base: ['cats-hero relative w-full overflow-hidden'],
    variants: {
      height: {
        full: 'min-h-screen',
        large: 'min-h-[600px] md:min-h-[700px]',
        medium: 'min-h-[400px] md:min-h-[500px]',
        small: 'min-h-[300px] md:min-h-[350px]'
      },
      backgroundColor: {
        primary: 'bg-[var(--cats-primary)]',
        secondary: 'bg-[var(--cats-secondary)]',
        dark: 'bg-slate-900',
        gradient: 'bg-gradient-to-br from-[var(--cats-primary)] to-[var(--cats-accent)]'
      },
      textColor: {
        light: 'text-white',
        dark: 'text-slate-900'
      }
    }
  )
%}

{% set hero_classes =
  hero_cva.apply({
    height: hero_height,
    backgroundColor: hero_bg_color,
    textColor: hero_text_color
  })
%}

{% set content_cva =
  html_cva(
    base: ['relative z-10 container mx-auto px-4 h-full flex'],
    variants: {
      position: {
        'top-left': 'items-start justify-start pt-12',
        'top-center': 'items-start justify-center pt-12 text-center',
        'top-right': 'items-start justify-end pt-12 text-right',
        'center-left': 'items-center justify-start',
        'center': 'items-center justify-center text-center',
        'center-right': 'items-center justify-end text-right',
        'bottom-left': 'items-end justify-start pb-12',
        'bottom-center': 'items-end justify-center pb-12 text-center',
        'bottom-right': 'items-end justify-end pb-12 text-right'
      }
    }
  )
%}

{% set content_classes =
  content_cva.apply({
    position: hero_position
  })
%}

{% set overlay_cva =
  html_cva(
    base: ['absolute inset-0 bg-black z-[1]'],
    variants: {
      opacity: {
        '0': 'opacity-0',
        '20': 'opacity-20',
        '40': 'opacity-40',
        '60': 'opacity-60',
        '80': 'opacity-80'
      }
    }
  )
%}

{% set overlay_classes =
  overlay_cva.apply({
    opacity: hero_overlay
  })
%}

<div class="{{ hero_classes }} {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %}>
  {# Background Image Slot #}
  <div class="absolute inset-0 z-0">
    {% block background_image %}
    {% endblock %}
  </div>

  {# Overlay #}
  {% if hero_overlay != '0' %}
    <div class="{{ overlay_classes }}"></div>
  {% endif %}

  {# Content #}
  <div class="{{ content_classes }}">
    <div class="max-w-3xl">
      {% block hero_content %}
      {% endblock %}
    </div>
  </div>
</div>

{#
/**
 * @file
 * Hero component - Banner con imagen de fondo flexible
 */
#}

{% set custom_class = css_class|default("") %}
{% set custom_id = html_id|default("") %}
{% set hero_height = height|default("large") %}
{% set hero_overlay = overlay|default("medium") %}
{% set hero_bg_position = background_position|default("center") %}
{% set hero_align_h = content_align_horizontal|default("center") %}
{% set hero_align_v = content_align_vertical|default("center") %}
{% set bg_image = background_image|default({}) %}

{# Height classes #}
{% set height_class = "" %}
{% if hero_height == "full" %}
  {% set height_class = "min-h-screen" %}
{% elseif hero_height == "xlarge" %}
  {% set height_class = "cats-hero-xlarge" %}
{% elseif hero_height == "large" %}
  {% set height_class = "cats-hero-large" %}
{% elseif hero_height == "medium" %}
  {% set height_class = "cats-hero-medium" %}
{% elseif hero_height == "small" %}
  {% set height_class = "cats-hero-small" %}
{% endif %}

{# Horizontal alignment (align-items con flex-direction: column) #}
{% set align_h_class = "" %}
{% if hero_align_h == "left" %}
  {% set align_h_class = "items-start" %}
{% elseif hero_align_h == "center" %}
  {% set align_h_class = "items-center" %}
{% elseif hero_align_h == "right" %}
  {% set align_h_class = "items-end" %}
{% endif %}

{# Vertical alignment (justify-content con flex-direction: column) #}
{% set align_v_class = "" %}
{% if hero_align_v == "top" %}
  {% set align_v_class = "justify-start" %}
{% elseif hero_align_v == "center" %}
  {% set align_v_class = "justify-center" %}
{% elseif hero_align_v == "bottom" %}
  {% set align_v_class = "justify-end" %}
{% endif %}

{# Overlay classes #}
{% set overlay_class = "" %}
{% if hero_overlay == "light" %}
  {% set overlay_class = "cats-hero-overlay-light" %}
{% elseif hero_overlay == "medium" %}
  {% set overlay_class = "cats-hero-overlay-medium" %}
{% elseif hero_overlay == "dark" %}
  {% set overlay_class = "cats-hero-overlay-dark" %}
{% endif %}

{# Background position #}
{% set bg_position_class = "" %}
{% if hero_bg_position == "top" %}
  {% set bg_position_class = "cats-hero-bg-top" %}
{% elseif hero_bg_position == "bottom" %}
  {% set bg_position_class = "cats-hero-bg-bottom" %}
{% else %}
  {% set bg_position_class = "cats-hero-bg-center" %}
{% endif %}

<div
  class="cats-hero relative w-full overflow-hidden {{ height_class }} {{ custom_class }}"
  {% if custom_id %}id="{{ custom_id }}"{% endif %}
>
  {# Background Image #}
  {% if bg_image.src %}
    <div class="cats-hero-background {{ bg_position_class }}">
      <img
        src="{{ bg_image.src }}"
        alt="{{ bg_image.alt|default('') }}"
        class="cats-hero-img"
        loading="eager"
      />
    </div>
  {% endif %}

  {# Overlay #}
  {% if hero_overlay != "none" %}
    <div class="cats-hero-overlay {{ overlay_class }}"></div>
  {% endif %}

  {# Content con alineacion #}
  <div class="cats-hero-content relative z-10 flex {{ align_h_class }} {{ align_v_class }}">
    {% block content %}
    {% endblock %}
  </div>
</div>

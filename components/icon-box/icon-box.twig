{% set wrapper_cva =
  html_cva(
    base: ['cats-icon-box'],
    variants: {
      layout: {
        vertical: 'flex flex-col',
        horizontal: 'flex flex-row items-start gap-4'
      },
      alignment: {
        left: 'text-left items-start',
        center: 'text-center items-center'
      }
    }
  )
%}

{% set wrapper_classes =
  wrapper_cva.apply({
    layout: box_layout,
    alignment: box_alignment
  })
%}

{% set icon_wrapper_cva =
  html_cva(
    base: ['flex items-center justify-center shrink-0'],
    variants: {
      size: {
        small: 'w-10 h-10',
        medium: 'w-14 h-14',
        large: 'w-20 h-20'
      },
      style: {
        plain: '',
        circle: 'rounded-full',
        square: 'rounded-lg'
      },
      color: {
        primary: 'cats-bg-primary/10 cats-text-primary',
        secondary: 'cats-bg-secondary/10 cats-text-secondary',
        accent: 'cats-bg-accent/10 cats-text-accent'
      }
    }
  )
%}

{% set icon_wrapper_classes =
  icon_wrapper_cva.apply({
    size: box_icon_size,
    style: box_icon_style,
    color: box_icon_color
  })
%}

{% set icon_size_map = {
  'small': 'w-5 h-5',
  'medium': 'w-7 h-7',
  'large': 'w-10 h-10'
} %}

<div class="{{ wrapper_classes }} {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %}>
  {# Icon #}
  <div class="{{ icon_wrapper_classes }} {{ box_layout == 'vertical' ? 'mb-4' : '' }}">
    <svg class="{{ icon_size_map[box_icon_size] }}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="{{ icon_paths[box_icon]|default(icon_paths['star']) }}"/>
    </svg>
  </div>

  {# Content #}
  <div class="{{ box_layout == 'horizontal' ? 'flex-1' : '' }}">
    {% if box_title %}
      <h3 class="text-lg font-semibold mb-2 cats-text-foreground">
        {{ box_title }}
      </h3>
    {% endif %}

    {% if box_description %}
      <p class="text-gray-600 mb-3">
        {{ box_description }}
      </p>
    {% endif %}

    {% block content %}
    {% endblock %}

    {% if box_link_url %}
      <a href="{{ box_link_url }}" class="inline-flex items-center gap-1 cats-text-primary font-medium hover:underline">
        {{ box_link_text }}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    {% endif %}
  </div>
</div>

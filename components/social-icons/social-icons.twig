{# Brand colors for each network #}
{% set brand_colors = {
  facebook: '#1877F2',
  twitter: '#000000',
  instagram: '#E4405F',
  linkedin: '#0A66C2',
  youtube: '#FF0000',
  tiktok: '#000000',
  pinterest: '#BD081C',
  github: '#181717',
  dribbble: '#EA4C89',
  behance: '#1769FF',
  whatsapp: '#25D366',
  telegram: '#26A5E4',
  email: '#6366F1'
} %}

{% set wrapper =
  html_cva(
    base: ['flex flex-wrap'],
    variants: {
      alignment: {
        left: 'justify-start',
        center: 'justify-center',
        right: 'justify-end'
      },
      gap: {
        small: 'gap-2',
        medium: 'gap-3',
        large: 'gap-4'
      }
    }
  )
%}

{% set icon_button =
  html_cva(
    base: [
      'inline-flex items-center justify-center',
      'transition-all duration-200',
      'focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary'
    ],
    variants: {
      style: {
        default: 'text-foreground hover:text-primary',
        filled: 'text-white rounded-full',
        outlined: 'border-2 border-current rounded-full hover:bg-current hover:text-white',
        minimal: 'text-muted-foreground hover:text-foreground'
      },
      size: {
        small: 'w-8 h-8',
        medium: 'w-10 h-10',
        large: 'w-12 h-12'
      }
    }
  )
%}

{% set icon_size_map = {
  small: 'w-4 h-4',
  medium: 'w-5 h-5',
  large: 'w-6 h-6'
} %}

{% set additional_classes = custom_class|default('') %}
{% if additional_classes is iterable %}
  {% set additional_classes = additional_classes|join(' ') %}
{% endif %}

{% set wrapper_classes =
  wrapper.apply({
    alignment: social_alignment,
    gap: social_gap
  }, additional_classes)
%}

<div class="cb-social-icons {{ wrapper_classes }}">
  {% for icon in social_icons %}
    {% set network = icon.network %}
    {% set url = icon.url %}
    {% set icon_path = icon_paths[network]|default('') %}
    {% set brand_color = brand_colors[network]|default('#6366F1') %}

    {% set button_classes = icon_button.apply({ style: social_style, size: social_size }) %}

    <a
      href="{{ network == 'email' ? 'mailto:' ~ url : url }}"
      class="{{ button_classes }}"
      target="{{ network == 'email' ? '_self' : '_blank' }}"
      rel="noopener noreferrer"
      aria-label="{{ network|capitalize }}"
      {% if social_style == 'filled' %}style="background-color: {{ brand_color }};"{% endif %}
    >
      <svg
        class="{{ icon_size_map[social_size] }}"
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path d="{{ icon_path }}"/>
      </svg>
    </a>
  {% endfor %}
</div>

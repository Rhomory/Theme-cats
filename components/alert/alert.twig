{#
/**
 * @file
 * Alert component - Alerta/notificación
 */
#}


{% set custom_class = css_class|default('') %}
{% set custom_id = html_id|default('') %}
{% set alert_title = title|default('') %}
{% set alert_message = message|default('') %}
{% set alert_type = type|default('info') %}
{% set alert_variant = variant|default('soft') %}
{% set is_dismissible = dismissible|default(false) %}
{% set has_icon = show_icon|default(true) %}
{% set alert_link_url = link_url|default('') %}
{% set alert_link_text = link_text|default('Ver más') %}

{# Type icons #}
{% set type_icons = {
  'info': 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  'success': 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  'warning': 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  'error': 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z'
} %}

{% set alert_cva =
  html_cva(
    base: ['cats-alert relative flex gap-3 p-4 rounded-lg'],
    variants: {
      type: {
        info: '',
        success: '',
        warning: '',
        error: ''
      },
      variant: {
        filled: '',
        outlined: 'border-2 bg-transparent',
        soft: ''
      }
    }
  )
%}

{# Color classes based on type and variant #}
{% set color_classes = {
  'info': {
    'filled': 'bg-blue-600 text-white',
    'outlined': 'border-blue-600 text-blue-700',
    'soft': 'bg-blue-50 text-blue-800 border border-blue-200'
  },
  'success': {
    'filled': 'bg-green-600 text-white',
    'outlined': 'border-green-600 text-green-700',
    'soft': 'bg-green-50 text-green-800 border border-green-200'
  },
  'warning': {
    'filled': 'bg-yellow-500 text-white',
    'outlined': 'border-yellow-500 text-yellow-700',
    'soft': 'bg-yellow-50 text-yellow-800 border border-yellow-200'
  },
  'error': {
    'filled': 'bg-red-600 text-white',
    'outlined': 'border-red-600 text-red-700',
    'soft': 'bg-red-50 text-red-800 border border-red-200'
  }
} %}

{% set alert_classes = alert_cva.apply({
  type: alert_type,
  variant: alert_variant
}) ~ ' ' ~ color_classes[alert_type][alert_variant] %}

<div class="{{ alert_classes }} {{ custom_class }}"{% if custom_id %} id="{{ custom_id }}"{% endif %} role="alert" data-cats-alert>
  {# Icon #}
  {% if has_icon %}
    <svg class="w-5 h-5 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ type_icons[alert_type] }}"/>
    </svg>
  {% endif %}

  {# Content #}
  <div class="flex-1">
    {% if alert_title %}
      <h4 class="font-semibold mb-1">{{ alert_title }}</h4>
    {% endif %}

    {% if alert_message %}
      <p class="{{ alert_title ? '' : 'font-medium' }}">{{ alert_message }}</p>
    {% endif %}

    {% block content %}
    {% endblock %}

    {% if alert_link_url %}
      <a href="{{ alert_link_url }}" class="inline-flex items-center gap-1 mt-2 font-medium underline hover:no-underline">
        {{ alert_link_text }}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    {% endif %}
  </div>

  {# Dismiss button #}
  {% if is_dismissible %}
    <button
      type="button"
      class="shrink-0 p-1 rounded hover:bg-black/10 transition-colors"
      aria-label="Cerrar"
      data-alert-dismiss
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  {% endif %}
</div>
